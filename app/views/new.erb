<h1>Make A Recipe</h1>

  <form action="/recipes" method="post">
    <p><label for="Recipe Name">Name</label></p>
    <p><input type="text" name="name" id="recipe_name"></p>

    <p><label for="Recipe ingredients">Ingredients</label></p>
    <p><input type="text" name="ingredients" id="recipe_ingredients"></p>

    <p><label for="Cook Time">Cook Time</label></p>
    <p><input type="text" name="cook_time" id="recipe_cook_time"></p>

    <input type="submit" name="" value="submit">
  </form>
